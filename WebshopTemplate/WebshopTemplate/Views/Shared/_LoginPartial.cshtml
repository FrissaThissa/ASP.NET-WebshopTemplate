@using Microsoft.AspNetCore.Identity
@using WebshopTemplate.Areas.Identity.Data

@inject SignInManager<WebshopTemplateUser> SignInManager
@inject UserManager<WebshopTemplateUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    WebshopTemplateUser user = await UserManager.GetUserAsync(User);
    <li class="nav-item">
        <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @user.UserName!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}

    <li class="nav-item">
        <a asp-controller="Wishlist" asp-action="Index"><i class="fa fa-heart nav-link text-dark"></i></a>
        
    </li>
    <li class="nav-item">
        <a asp-controller="Cart" asp-action="Index"><i class="fa fa-shopping-cart nav-link text-dark"></i></a>
        
    </li>
</ul>
